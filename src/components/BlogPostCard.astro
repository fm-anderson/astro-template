---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
---

<article
  class="flex flex-col overflow-hidden rounded-lg border border-gray-200 shadow-sm transition hover:shadow-lg"
>
  <a href={`/blog/${post.slug}`}>
    {
      post.data.image && (
        <Image
          src={post.data.image}
          alt={`Featured image for ${post.data.title}`}
          class="aspect-video w-full object-cover"
        />
      )
    }
  </a>
  <div class="flex flex-1 flex-col justify-between bg-white p-6">
    <div class="flex-1">
      <p class="text-sm font-medium text-teal-600">
        {post.data.section}
      </p>
      <a href={`/blog/${post.slug}`} class="mt-2 block">
        <h3 class="text-xl font-semibold text-gray-900">{post.data.title}</h3>
        <p class="mt-3 text-base text-gray-500">{post.data.description}</p>
      </a>
    </div>
    <div class="mt-6 flex items-center">
      <div class="text-sm text-gray-500">
        <time datetime={post.data.publishedTime.toISOString()}>
          {
            new Date(post.data.publishedTime).toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </time>
      </div>
    </div>
  </div>
</article>
