---
import Layout from "../layouts/Layout.astro";
const pageTitle = "Unlocking QR Code Potential: A Comprehensive Guide";
const pageDescription =
  "Dive deep into the world of QR codes. Learn how they work, their history, and innovative ways to use them for your business.";
const postPublished = "2025-07-25T10:30:00-04:00"; // time example
const postAuthor = "John Doe";
const postSection = "Guides";
const postTags = ["QR Codes", "Marketing", "Technology"];
---

<Layout
  title={pageTitle}
  description={pageDescription}
  contentType="article"
  publishedTime={postPublished}
  modifiedTime={postPublished}
  author={postAuthor}
  section={postSection}
  tags={postTags}
  image="/blog-images/my-first-post-og.jpg"
>
  <main>
    <h1>{pageTitle}</h1>
    <p>Published: {new Date(postPublished).toLocaleDateString()}</p>
    <p>By: {postAuthor}</p>
    <article>
      <p>This is the content of my first blog post about QR codes...</p>
    </article>
  </main>
</Layout>
